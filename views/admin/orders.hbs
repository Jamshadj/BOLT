          </thead>
          <tbody>
            {{#each orders}}
            <tr>
              <th scope="row">{{inc @index}}</th>

              <td>{{this._id}}</td>
              <td>{{this.shippingAddress.name}}</td>
              <td><i class="bi bi-currency-rupee"></i>{{this.totalPrice}}</td>

              <td>
                {{#each this.orderItems}}
                <ul>
                  {{this.name}}
                </ul>

                {{/each}}
              </td>

              <td>{{#each this.orderItems}}
              
                  {{#ifEqual this.status "Cancelled"}}
                    <ul><p> Order Cancelled By User</p></ul>
                  {{else ifEqual this.status "Return requested"}}
                 <ul><p>Return requested</p></ul> 
