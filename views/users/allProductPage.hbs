                                <label for="xxs">
                                    <a href="/brandproduct?brand={{this.newbrands}}">{{this.newbrands}}</a>

                                </label>

                            </div>{{/each}}
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 col-md-9">
                    <div class="row">
                        {{#each products}}
                        <div class="col-lg-4 col-md-6  col-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg"
                                    data-setbg="/photos/{{this.image}}">
                                    <ul class="product__hover">
                                        <li><a href="/photos/{{this.image}}" class="image-popup"><span
                                                    class="arrow_expand"></span></a></li>
                                        <li><a onclick="addtowishlist('{{this._id}}')"><span class="icon_heart_alt"></span></a></li>
                                        <li><a onclick="addToCart('{{this._id}}')"><span class="icon_bag_alt"></span></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a href="/product/{{this._id}}">{{this.productname}}</a></h6>
                                    <div class="rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <div class="product__price"><i class="bi bi-currency-rupee"></i>{{this.prize}}</div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        {{#each allproducts}}
                        <div class="col-lg-4 col-md-6 col-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" 
