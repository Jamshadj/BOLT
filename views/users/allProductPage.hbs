                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a href="/product/{{this._id}}">{{this.productname}}</a></h6>
                                    <div class="rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <div class="product__price"><i class="bi bi-currency-rupee"></i>{{this.prize}}</div>
                                </div>
                            </div>
                        </div>
                        {{/each}}

                        <div class="col-lg-12">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination" style="justify-content: center;">
                                    {{#each pagination}}
                                    <li class="page-item"><a class="page-link" href="/productpage/?page={{inc @index}}"
                                            style="color: black;">{{inc @index}}</a></li>
                                    {{/each}}
                                </ul>
                            </nav>
                        </div>

                    </div>
                    </ul>
