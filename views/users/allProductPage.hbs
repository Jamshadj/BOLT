    <section class="shop spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <div class="shop__sidebar">
                        <div class="checkout__order__widget" style="margin-top: 5px;">
                            <div class="section-title">
                                <h4>Categories</h4>
                            </div>
                            <div class="size__list">
                                {{#each category}}
                                <label>
                                    <a href="/categoryproduct?catgy={{this.newcategories}}">
                                        {{this.newcategories}}
                                    </a>

                                </label>
                                {{/each}}
                            </div>


                        </div>

                        <div class="checkout__order__widget">
                            <div class="section-title">
                                <h4>Shop by price</h4>
                            </div>
                            <label for="hightolow">
                                <a href="/priceSorting?sort=desc" id="hightolow-link">High to low</a>
                            </label>
                            <label for="lowtohigh">
                                <a href="/priceSorting?sort=asc" id="lowtohigh-link">Low to high</a>
                            </label>
                        </div>
                        <div class="checkout__order__widget">
                            <div class="section-title">
                                <h4>Shop by brand</h4>
                            </div> {{#each brand}}
