    <script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
    <script>
        function increment(id) {
            document.getElementById('message'+id).textContent = ''
            axios.get('/incrementQuantity/' + id).then((result) => {
                let quantityBox = document.getElementById('quantityBox' + id)
                if (result.data.success) {
                    quantityBox.textContent = Number(quantityBox.textContent) + 1;
                    let totaItemPrice = document.getElementById('totaItemPrice' + id);
                    let price = Number(document.getElementById('price' + id).textContent);
                    let totalMRP = document.getElementById('totalMrp');
                    let mrp = Number(document.getElementById("mrp" + id).value);
                    let discount = document.getElementById('discount');
                    let showdiscount = document.getElementById('showdiscount');
                    let totalAmount = document.getElementById('totalAmount');
                    totaItemPrice.textContent = price * Number(quantityBox.textContent);
                    totalMRP.textContent = Number(totalMRP.textContent) + mrp;
                    discount.textContent = Number(totalMRP.textContent) - Number(totaItemPrice.textContent);
                    showdiscount.textContent = Number(totalMRP.textContent) - Number(totaItemPrice.textContent);
                    totalAmount.textContent = Number(totalAmount.textContent)+price


                }
                else {
                    document.getElementById('message'+id).textContent = result.data.message
                }
            })

        }

        function decrement(id) {
            document.getElementById('message'+id).textContent = ''
            let quantityBox = document.getElementById('quantityBox' + id)
            if (Number(quantityBox.textContent) > 1) {
                axios.get('/decrementQuantity/' + id).then((result) => {
                    if (result.data.success) {
                        quantityBox.textContent = Number(quantityBox.textContent) - 1;
                        let totaItemPrice = document.getElementById('totaItemPrice' + id)
                        let price = Number(document.getElementById('price' + id).textContent)
                        totaItemPrice.textContent = price * Number(quantityBox.textContent)
                        let totalMRP = document.getElementById('totalMrp')
                        let mrp = Number(document.getElementById("mrp" + id).value)
                        let discount = document.getElementById('discount')
                        let showdiscount = document.getElementById('showdiscount');
                        let totalAmount = document.getElementById('totalAmount')
                        totalMRP.textContent = Number(totalMRP.textContent) - mrp
                        discount.textContent = Number(totalMRP.textContent) - Number(totaItemPrice.textContent)
                        showdiscount.textContent = Number(totalMRP.textContent) - Number(totaItemPrice.textContent);
                        totalAmount.textContent = Number(totalAmount.textContent)-Number(price)

                    }
                    else {
                        quantityBox.textContent = Number(quantityBox.textContent) - 1;
                        let totaItemPrice = document.getElementById('totaItemPrice' + id)
                        let price = Number(document.getElementById('price' + id).textContent)
                        totaItemPrice.textContent = price * Number(quantityBox.textContent)
                        let totalMRP = document.getElementById('totalMrp')
                        let mrp = Number(document.getElementById("mrp" + id).value)
                        totalMRP.textContent = Number(totalMRP.textContent) - mrp
                    }
                })

            }
            else {
                document.getElementById('message'+id).textContent = 'Cannot increase quantity less than 1'

            }

        }
    </script>


