    <script>
        // function do(){
        //   location.href = "/login"
        //}
        function addToCart(id) {

            axios.get('/addtocart/' + id).then((result) => {
                ;
                if (result.data.success) {
                    swal("Success!", "The item has been added to your cart.", "success");
                } else {

                    swal({
                        title: "Please login",
                        text: "You need to login to access this page.",
                        imageUrl: 'login-icon.png',
                        imageAlt: 'Login icon',
                        buttons: {
                            cancel: true,
                            confirm: {
                                text: "Login",
                                value: "login",
                                className: "login-btn",
                            }
                        },
                    })
                        .then((value) => {
                            if (value === "login") {
                                location.href = '/login'
                            }
                        });


                }
            })
        }
         function addtowishlist(id) {
                     console.log('dfrfrcddccddd',id)
            axios.get('/addtowishlist/' + id).then((result) => {
                if (result.data.success) {
                    swal("Success!", "The item has been added to your wishlist", "success");
                } else {
                    console.log('dfrfrd')
                    swal({
                        title: "Please login",
