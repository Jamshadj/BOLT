                        buttons: {
                            cancel: true,
                            confirm: {
                                text: "Login",
                                value: "login",
                                className: "login-btn",
                            }
                        },
                    })
                        .then((value) => {
                            if (value === "login") {
                                location.href = '/login'
                            }
                        });


                }
            })
        }

    </script>


