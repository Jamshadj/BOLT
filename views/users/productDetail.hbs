            <div class="canvas__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header Section End -->
    <!-- Product Details Section Begin -->
    <section class="product-details spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="product__details__pic">
                        <div class="product__details__pic__left product__thumb nice-scroll">
                            <a class="pt active" href="#product-1">
                                <img  src="/photos/{{product.image}}" alt="">
                            </a>
                            <a class="pt" href="#product-2">
                                <img src="/photos/{{product.subimage.[0]}}" alt="">
                            </a>
                            <a class="pt" href="#product-3">
                                <img src="/photos/{{product.subimage.[1]}}" alt="">
                            </a>
                            <a class="pt" href="#product-4">
                                <img src="/photos/{{product.subimage.[2]}}" alt="">
                            </a>
                        </div>
                        <div class="product__details__slider__content">
                            <div class="product__details__pic__slider owl-carousel">
                                <img data-hash="product-1" class="product__big__img" style="margin-top: 7rem;" src="/photos/{{product.image}}" alt="">
                                <img data-hash="product-2" class="product__big__img" src="/photos/{{product.subimage.[0]}}" alt="">
                                <img data-hash="product-3" class="product__big__img" src="/photos/{{product.subimage.[1]}}" alt="">
                                <img data-hash="product-4" class="product__big__img" src="/photos/{{product.subimage.[2]}}" alt="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="product__details__text">
                        <h3>{{product.productname}}<span>Brand:{{product.brand}}</span></h3>
                        <div class="rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                        </div>
                        <div class="product__details__price">₹{{product.prize}}<span>₹{{product.MRP}}</span></div>
                          <p>{{product.description}}</p>
                        <div class="product__details__button">
                            
                            <a onclick="addToCart('{{product._id}}')" class="cart-btn"><span class="icon_bag_alt"></span> Add to cart</a>
                            <ul>
                                <li><a onclick="addtowishlist('{{product._id}}')"><span class="icon_heart_alt"></span></a></li>
                            </ul>
                        </div>
                        <div class="product__details__widget">
                            <ul>
                                <li>
                                    <span>Availability:</span>
                                    <div class="stock__checkbox">
                                        <label for="stockin">
                                            In Stock
                                        </label>
                                    </div>
                                </li>
                              
                                <li>
                                    <span>Promotions:</span>
                                    <p>Free shipping</p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="product__details__tab">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab">Description</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabs-1" role="tabpanel">
                                <h6>Description</h6>
                                <p>{{product.description}}</p>
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>
           
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="related__title">
                        <h5>RELATED PRODUCTS</h5>
                    </div>
                </div>
                  {{#each products}}  
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="/photos/{{this.image}}">
                            <div class="label new">New</div>
                            <ul class="product__hover">
                                <li><a href="/photos/{{this.image.filename}}" class="image-popup"><span class="arrow_expand"></span></a></li>
                                <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                                <li><a href="#"><span class="icon_bag_alt"></span></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6><a href="#">{{this.productname}}</a></h6>
                            <div class="rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                            <div class="product__price">{{this.price}}</div>
                        </div>
                    </div>
                </div>
                  {{/each}}
            </div>
          
        </div>
    </section>
    <!-- Product Details Section End -->

