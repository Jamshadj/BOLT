                            <a href="/signup">Register</a>
                            {{/if}}
                        </div>
                        <ul class="header__right__widget">
                            <li><span class="icon_search search-switch"></span></li>
                            <li><a href="/wish-list"><span class="icon_heart_alt"></span>


                                </a></li>
                            <li><a href="/cartpage"><span class="icon_bag_alt"></span>

                                </a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="canvas__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header Section End -->
    <!-- Checkout Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <form action="/placeorder" class="checkout__form" method="post">
                <div class="row">

                    <div class="col-lg-8">
                        <div class="col-lg-12">
                            <h5>
                                Delivery Address
                            </h5>
                        </div>
                        <div class="col-lg-12"
                            style="height:10vh;background-color: whitesmoke;margin: 1rem;width: 95%;border-radius: 8px; display: flex;align-items: center;">
                            <a href="/add-new-address">
                                <div class="col-1"> <span
                                        style="font-size: 25px; color: blue; font-weight: bold;">+</span></div>
                            </a>
                            <div class="col-11">
                                <p style="padding-top: 12px;
    font-weight: bold;">Add new address</p>
                            </div>
                        </div>


                        {{#each users.address}}
                        <div class="col-lg-6" style=" margin-top: 1rem;display: flex; justify-content: center;">
                            <div class="radio-container" style="width: 21rem;">
                                <div>
                                    <input type="radio" value="{{this.id}}" name="useraddress" checked>
                                    <label for="address-2">
                                        <span class="top__text">{{this.firstname}}{{this.lastname}}</span>
                                        <p>{{this.address}} near {{this.landmark}},{{this.state}}-{{this.pincode}}</p>
                                        <p>Ph no:{{this.phonenumber}}</p>
                                        <a href="/edit-address/{{this.id}}">Edit</a>
                                    </label>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    <div class="col-lg-4">
                        <div class="checkout__order">
                            <h5>Your order</h5>
                            <div class="checkout__order__product">
                                <ul>
                                    <li>
                                        <span class="top__text">Product</span>
                                        <span class="top__text__right">Total</span>
                                    </li>

                                    {{#each products}}

                                    <li>{{this.productname}}<span>₹{{this.itemprize}}</span></li>
                                    {{/each}}
                                </ul>
                            </div>
                            <div class="checkout__order__total">
                                <ul>
                                    <li>Subtotal <span style="color: black;">₹{{totalAmount}}</span></li>

                                    {{#if cashback.lastPrice}}
                                    <li class="text-success">Discount applied<span
                                            class="text-success">₹-{{cashback.lastDiscount}}</span></li>
                                    <input type="hidden" value="{{cashback.lastDiscount}}" name="totalAmount">
                                    <li>Total <span>₹{{cashback.lastPrice}}</span></li>
                                    {{else if coupon}}
                                    <li class="text-success">Coupon added <span
                                            class="text-success">₹-{{coupon.discount}}</span></li>
                                    <input type="hidden" value="{{cashback.discountedPrice}}" name="totalAmount">
                                    <li>Total <span>₹{{cashback.discountedPrice}}</span></li>
                                    {{else if cashback.walletPrice}}
                                    <li class="text-success">Wallet applied<span
                                            class="text-success">₹-{{cashback.walletAmount}}</span></li>
                                    <input type="hidden" value="{{cashback.walletPrice}}" name="totalAmount">
                                    <li>Total <span>₹{{cashback.walletPrice}}</span></li>

                                    {{else}}
                                    <li>Total <span>₹{{totalAmount}}</span></li>
                                    <input type="hidden" value="{{totalAmount}}" name="totalAmount">
                                    {{/if}}
                                    {{!-- {{#if cashback}}
                                    {{#if coupon}}
                                    <li class="text-success">Coupon added <span
                                            class="text-success">₹-{{coupon.discount}}</span></li>
                                    <input type="hidden" value="{{cashback.discountedPrice}}" name="totalAmount">
                                    <li>Total <span>₹{{cashback.discountedPrice}}</span></li>
                                    {{/if}}

                                    {{#if cashback.walletPrice}}
                                    <li class="text-success">Wallet applied<span
                                            class="text-success">₹-{{cashback.walletAmount}}</span></li>
                                    <input type="hidden" value="{{cashback.walletPrice}}" name="totalAmount">
                                    <li>Total <span>₹{{cashback.walletPrice}}</span></li>
                                    {{/if}}



                                    {{else}}
                                    <li>Total <span>₹{{totalAmount}}</span></li>
                                    <input type="hidden" value="{{totalAmount}}" name="totalAmount">
                                    {{/if}} --}}
                                </ul>
                            </div>
                            <div class="checkout__order__widget">
                                <label for="check-payment">
                                    COD(cash on delivery)
                                    <input type="radio" id="check-payment" name="paymentMethod" value="COD" required>
                                    <span class="checkmark"></span>
                                </label>
                                <label for="paypal">
                                    Online payment
                                    <input type="radio" id="paypal" name="paymentMethod" value="Online-payment">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <button type="submit" class="site-btn">Place order</button>
                        </div>
                        <p class="text-danger">{{msg}}</p>


                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-lg-8">
                    {{#if cashback.discount}}
                    <button type="submit" class="site-btn"> Coupon Applied</button>
                    {{else}}
                    {{message}}
                    <div class="col-lg-8">
                        <div class="discount__content " style="padding: 13px; background-color: whitesmoke;">
                            <h6>Discount codes</h6>
                            <form action="/applycoupon" method="post">
                                <input type="text" placeholder="Enter your coupon code" name="couponcode"
                                    style="    margin-top: 1rem;">
                                <p>{{msg}}</p>
                                <button type="submit" class="site-btn" style="
    margin-top: 1rem;">Apply</button>
                            </form>
                        </div>
                    </div>
                    {{/if}}

                </div>
                <div class="col-lg-4">
                    <div class="discount__content " style="padding: 13px; background-color: whitesmoke;">
                        {{walletmessage}}
                        <h6>My wallet balance:<i class="bi bi-currency-rupee"></i>{{users.wallet}}</h6>
                        <form action="/applywallet" method="post">
                            <input required type="text" placeholder="Enter your amount " name="amount"
                                style="    margin-top: 1rem;">
                            <p>{{msg}}</p>
                            <button type="submit" class="site-btn" style="
    margin-top: 1rem;">Apply</button>
                        </form>
                    </div>
                </div>
            </div>
    </section>
    <!-- Checkout Section End -->


