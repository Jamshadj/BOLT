                        imageAlt: 'Login icon',
                        buttons: {
                            cancel: true,
                            confirm: {
                                text: "Login",
                                value: "login",
                                className: "login-btn",
                            }
                        },
                    })
                        .then((value) => {
                            if (value === "login") {
